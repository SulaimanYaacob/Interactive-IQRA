// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Room {
    createdByClerkId    String @unique //* Clerk's Id (Use this to retrieve user's room)
    roomId              String @unique //* Max 6 characters
    maxUsers            Int
    createdByIdentifier String @id @default(uuid()) //* Backup Id generated from prisma (In case clerk is no longer used)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([createdByClerkId])
}

enum Role {
    STUDENT
    TUTOR
    ADMIN
}

enum Status {
    PENDING
    ACCEPTED
    REJECTED
    CANCELLED
}
