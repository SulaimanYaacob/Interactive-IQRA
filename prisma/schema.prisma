// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Room {
    roomId              String @unique @default(uuid())
    roomPIN             String @unique //* Max 6 characters
    createdByClerkId    String @unique //* Clerk's Id (Use this to retrieve user's room)
    createdByIdentifier String @id @default(uuid()) //* Backup Id generated from prisma (In case clerk is no longer used)
    iqraBook            String
    maxUsers            Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([createdByClerkId])
}

enum Role {
    STUDENT
    TUTOR
    ADMIN
}

enum Status {
    PENDING
    ACCEPTED
    REJECTED
    CANCELLED
}
